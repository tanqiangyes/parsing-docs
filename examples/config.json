{
  "app": {
    "name": "Docs Parser",
    "version": "1.0.0",
    "description": "Word文档格式解析与比较工具"
  },
  "parser": {
    "supported_formats": [
      "docx",
      "doc", 
      "rtf",
      "wpd",
      "dot",
      "dotx"
    ],
    "max_file_size": 104857600,
    "timeout": 30000
  },
  "comparator": {
    "strict_mode": false,
    "tolerance": 0.1,
    "enable_annotations": true,
    "output_format": "json"
  },
  "validator": {
    "rules": {
      "font": {
        "min_size": 10.0,
        "max_size": 72.0,
        "required_fonts": ["宋体", "黑体", "Times New Roman", "Arial"]
      },
      "paragraph": {
        "min_spacing": 0.0,
        "max_spacing": 72.0,
        "required_alignment": ["left", "center", "right", "justify"]
      },
      "table": {
        "min_width": 1.0,
        "max_width": 100.0,
        "require_borders": true
      },
      "page": {
        "min_margins": 0.0,
        "max_margins": 144.0,
        "standard_sizes": ["A4", "Letter", "Legal"]
      }
    },
    "severity_weights": {
      "critical": 4.0,
      "high": 3.0,
      "medium": 2.0,
      "low": 1.0
    }
  },
  "annotator": {
    "output_directory": "annotated",
    "preserve_original": true,
    "add_timestamp": true,
    "annotation_style": {
      "font_color": "FF0000",
      "background_color": "FFFF00",
      "comment_prefix": "格式问题:"
    }
  },
  "templates": {
    "supported_formats": ["docx", "doc", "dot", "dotx"],
    "auto_load": true,
    "validation": {
      "strict": true,
      "check_required_fields": true
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "logs",
    "max_size": 10485760,
    "max_files": 10
  },
  "performance": {
    "max_concurrent_parsers": 4,
    "memory_limit": 536870912,
    "cache_size": 100
  },
  "output": {
    "reports": {
      "directory": "reports",
      "format": ["json", "txt", "html"],
      "include_details": true,
      "include_recommendations": true
    },
    "annotations": {
      "directory": "annotated",
      "preserve_structure": true,
      "add_summary": true
    }
  }
} 